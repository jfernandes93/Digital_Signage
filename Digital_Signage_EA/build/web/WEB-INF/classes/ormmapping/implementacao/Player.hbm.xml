<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="implementacao.Player" table="Player" lazy="false">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<many-to-one name="_canal" column="CanalID" class="implementacao.Canal" cascade="save-update,lock" unique="true" not-null="true" lazy="proxy" access="field">
		</many-to-one>
		<many-to-one name="_rede" cascade="lock" column="RedeID" class="implementacao.Rede" not-null="true" lazy="proxy" access="field">
		</many-to-one>
		<property name="Nome" column="Nome" type="string" length="255" not-null="false" lazy="false"/>
		<property name="Descricao" column="Descricao" type="string" length="255" not-null="false" lazy="false"/>
		<property name="Tamanho" column="Tamanho" type="double" not-null="true" lazy="false"/>
		<property name="Estado" column="Estado" type="string" length="255" not-null="false" lazy="false"/>
		<one-to-one name="_coordenada" class="implementacao.Coordenada" cascade="save-update,lock" property-ref="_player" lazy="proxy" access="field"/>
	</class>
</hibernate-mapping>
