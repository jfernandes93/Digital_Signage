<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="implementacao.Tipo" table="Tipo" lazy="false">
		<id name="ID" column="ID" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<set name="ORM__tipo" lazy="true" cascade="save-update,lock" inverse="true">
			<key column="TipoID" not-null="true"/>
			<one-to-many class="implementacao.Conteudo"/>
		</set>
		<joined-subclass name="implementacao.FicheiroMultimedia" table="FicheiroMultimedia" lazy="false">
			<key>
				<column name="TipoID"/>
			</key>
			<property name="URL" column="URL" type="string" length="255" not-null="false" lazy="false"/>
		</joined-subclass>
		<joined-subclass name="implementacao.PrevisaoTempo" table="PrevisaoTempo" lazy="false">
			<key>
				<column name="TipoID"/>
			</key>
			<property name="URL" column="URL" type="string" length="255" not-null="false" lazy="false"/>
		</joined-subclass>
		<joined-subclass name="implementacao.FeedRSS" table="FeedRSS" lazy="false">
			<key>
				<column name="TipoID"/>
			</key>
			<property name="URL" column="URL" type="string" length="255" not-null="false" lazy="false"/>
		</joined-subclass>
	</class>
</hibernate-mapping>
